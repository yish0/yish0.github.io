---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/astro/Header.astro';
import Footer from '../../components/astro/Footer.astro';
import BlogCard from '../../components/svelte/BlogCard.svelte';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Blog | Tech Blog" description="All blog posts">
  <Header />
  <main class="flex-1">
    <div class="container py-10">
      <div class="flex flex-col space-y-6">
        <div>
          <h1 class="text-3xl font-bold tracking-tight sm:text-4xl">Blog</h1>
          <p class="mt-2 text-muted-foreground">
            Thoughts on web development, programming, and technology.
          </p>
        </div>
        {
          allPosts.length > 0 ? (
            <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
              {allPosts.map((post) => (
                <BlogCard
                  title={post.data.title}
                  description={post.data.description}
                  pubDate={post.data.pubDate}
                  slug={post.slug}
                  tags={post.data.tags}
                  client:load
                />
              ))}
            </div>
          ) : (
            <p class="text-muted-foreground">No posts yet. Check back soon!</p>
          )
        }
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>
